#! /bin/bash
SCRIPTPATH=$( cd "$(dirname $0)" ; pwd )
THIS=`pwd`
if [ -z "$1" ]
then
  cd $SCRIPTPATH
  python3 -m ptpython -i --config-file ${SCRIPTPATH}/ptpython_config.py ${SCRIPTPATH}/aio2.py $THIS
else
  PSCR=`realpath $1`
  cd $SCRIPTPATH
  python3 -m ptpython --config-file ${SCRIPTPATH}/ptpython_config.py ${SCRIPTPATH}/aio2.py $THIS $PSCR
fi
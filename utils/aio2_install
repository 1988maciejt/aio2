#! /bin/bash
SCRIPT=$(readlink -f $0)
SCRIPTPATH=`dirname $SCRIPT`
sudo apt update
sudo apt upgrade -y
sudo apt install -y -f python3 python3-pip python3-tk dos2unix
sudo apt install -y -f texlive-xetex texlive-fonts-recommended texlive-plain-generic
sudo apt install -y -f zlib1g pandoc
sudo apt install -y -f bat
sudo pip3 install --upgrade pip
#sudo pip3 install pyqt5
#sudo pip3 install pyqtwebengine -U
sudo pip3 install ipython
sudo pip3 install ptpython
sudo pip3 install pyserial
sudo pip3 install plotext
sudo pip3 install percol
